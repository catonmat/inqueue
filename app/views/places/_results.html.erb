<% places.each do |place| %>
  <%= simple_form_for(place, html: { id: "place-#{place.google_place_id}" }) do |f| %>
    <%= f.text_field :google_place_id, id: place.google_place_id, type: "hidden" %>
    <%= f.button :submit, "Show place", class: "btn btn-link btn-sm" %>
  <% end %>
  {<br>
    name: <%= place['name'] %>,<br>
    address: <%= place['address'] %>,<br>
    latitude: <%= place['latitude'] %>,<br>
    longitude: <%= place['longitude'] %>,<br>
    rating: <%= place['rating'] %>,<br>
    google_place_id: <%= place['google_place_id'] %><br>
  },<br>

  <!-- TODO REFRESH LINE INFO !-->
  <div class="info-container" data-place-id="<%= place.google_place_id %>">
    <div class="info">
      <% if place.lines.empty? %>
        <p>There are no lines recorded in the last hour.</p>
      <% else %>
        <p>Last line recorded:
          <%= pluralize(((place.lines.inactive.last.end_date - place.lines.inactive.last.start_date) / 60).to_i, 'minute') %>
        </p>
      <% end %>
    </div>
  </div>
<% end %>
