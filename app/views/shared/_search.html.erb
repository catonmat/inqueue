<div>
  <div class="d-flex mt-3">
    <%= text_field_tag :query, params[:query], data: { target: 'search.keyword' }, class: "form-control search-bar" %>
    <%= button_tag(type: "submit", class: "btn btn-primary",
      data: { action: 'click->search#search' }) do %>
      <i class="fa fa-search"></i>
    <% end %>
  </div>
</div>

